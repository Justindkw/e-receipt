<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEF"
    tools:context=".homeScreen">

    <TableLayout
        android:id="@+id/folderTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/Clothes"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="this is a test" />

            <Button
                android:id="@+id/Traveling"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="this is a test" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/Gas"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="Gas" />

            <Button
                android:id="@+id/Entertainment"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="Entertainment" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/createFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tab_bar"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/home" />

        <Button
            android:id="@+id/budgetingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/budgeting" />

        <Button
            android:id="@+id/statsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/statistics" />
    </LinearLayout>

    <TextView
        android:id="@+id/eReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="26dp"
        android:text="eReceipt"
        android:textSize="36sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>