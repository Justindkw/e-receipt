<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folderButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/folderLayout"
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:background="@drawable/folder_base"
        android:clipToPadding="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/folderIcon"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/receipt_icon"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.37" />

        <TextView
            android:id="@+id/timerNotification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/notification_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            app:fontFamily="@font/ralewayregular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/deleteBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:foregroundGravity="center"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontFamily="@font/ralewayregular"
            app:layout_constraintEnd_toEndOf="@+id/folderLayout"
            app:layout_constraintStart_toStartOf="@+id/folderLayout"
            app:layout_constraintTop_toBottomOf="@+id/folderIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>